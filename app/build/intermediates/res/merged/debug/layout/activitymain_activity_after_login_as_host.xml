
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.carmine.myapplication.layout.activity.LoginActivity"
    android:weightSum="1"
    android:background="@color/sfondo">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:weightSum="1"
      android:layout_weight="0.20">

     <Button android:id="@+id/ricerca_locale"
         style="@android:style/Widget.Button.Inset"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="16dp"
         android:text="ricerca locale"
         android:textStyle="bold"
         xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_weight="0.52" />
     <Button android:id="@+id/ricerca_prodotto"
         style="@android:style/Widget.Button.Inset"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="16dp"
         android:text="ricerca prodotto"
         android:textStyle="bold"
         xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_weight="0.43" />
  </LinearLayout>

    <TextView
        android:text="@string/selected_place"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/place_details"
        android:autoLink="all"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/place_attribution"
        android:autoLink="all"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp" />
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="386dp"
    tools:context="com.example.carmine.myapplication.layout.activity.loginAsHost"
    android:layout_weight="8.46"
    android:layout_height="420dp" />
   </LinearLayout>

