<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cast_intro_overlay_button_background_color">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="117dp">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/menu"
            android:id="@+id/imageView3"
            android:paddingRight="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="175dp"
            android:layout_height="115dp">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="titolo dell'offerta giornaliera"
                android:layout_weight="0.06"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:textAppearance="@style/TextAppearance.AppCompat"
                tools:text="descrizione dettagliata  dell'offerta in questione" />

            <TextView
                android:id="@+id/textViewNomeProdotto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="descrizione dettagliata  dell'offerta in questione" />

            <TextView
                android:id="@+id/textViewPrezzoProdotto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="descrizione dettagliata  dell'offerta in questione" />
        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxListView"
            android:layout_weight="0.00"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:paddingTop="210dp" />
    </LinearLayout>

</LinearLayout>